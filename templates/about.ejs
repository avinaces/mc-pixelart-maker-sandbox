<script type="text/javascript">
let repo = 'gd-codes/mc-pixelart-maker';
document.addEventListener('DOMContentLoaded', function(event) {
    fetch(`https://api.github.com/repos/${repo}/branches/main`).then(
        (response) => response.json()
    ).then((data) => {
        let upDate = new Date(data.commit.commit.committer.date).toDateString();
        document.getElementById('lastUpdated').innerText = upDate;
    })
});
document.addEventListener('DOMContentLoaded', function(event) {
    fetch(`https://api.github.com/repos/${repo}/contributors`).then(
        (response) => response.json()
    ).then((data) => {
        let contributors = '';
        data.forEach(contrib => {
            contributors += `<a href="${contrib.html_url}" title="${contrib.login}"><img class="profile-avatar" src="${contrib.avatar_url}"/></a>`
        });
        document.getElementById('contributors').innerHTML = contributors;
    })
});
</script>

